@page "/"
@inject GamesClient Client

<PageTitle>Game Catalog</PageTitle>

<div class="mt-2">
    <a class="btn btn-primary" role="button" href="/editgame">New game</a>
</div>

@if (_games is null)
{
    <h1>Games not found !!!</h1>
}
else
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Genre</th>
                <th class="text-end">Price</th>
                <th>Release Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in _games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>@game.ReseleaseDate.ToString("d")</td>
                    <td>
                        <div>
                            <a class="btn btn-primary" role="button" href="/editgame/@game.Id">Edit</a>
                            <a class="btn btn-primary" role="button" href="/delete/@game.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code
{
    private GameSummary[]? _games;
    protected override void OnInitialized()
    {
        _games = Client.GetGames()!;
    }
}
